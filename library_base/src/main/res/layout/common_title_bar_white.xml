<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48_dp">

    <!--Title Content-->

    <RelativeLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_75_dp"
        android:layout_marginRight="@dimen/dimen_75_dp">

        <!--android:id="@+id/txt_title"-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/title_bar_title_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="16dp"
            android:textStyle="bold" />

        <!--android:id="@+id/progressBar"-->
        <ProgressBar
            android:id="@+id/title_bar_PB"
            android:layout_width="@dimen/dimen_14_dp"
            android:layout_height="@dimen/dimen_14_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5_dp"
            android:layout_toRightOf="@id/title_bar_title_TV"
            android:indeterminateDrawable="@drawable/conneting_loading"
            android:visibility="gone" />

        <!--android:id="@+id/title_filter_img"-->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/title_bar_filter_IV"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/title_bar_title_TV"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/title_bar_title_TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/title_bar_title_TV"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="宠爱榜"
                android:textColor="#333333"
                android:textSize="15dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/title_bar_title_TV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_toRightOf="@id/title_bar_title_TV"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="宠爱榜"
                android:textColor="#333333"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <!--android:id="@+id/iv_title_middle"-->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/title_bar_title_middle_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:visibility="gone" />

    <!-- Left Content-->
    <!--android:id="@+id/left_content"-->
    <LinearLayout
        android:id="@+id/title_bar_left_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- 图片按钮-->
        <!--android:id="@+id/iv_title_left"-->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/title_bar_title_left_IV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_title_back"
            android:visibility="gone" />

        <!-- 文字按钮-->
        <!--android:id="@+id/txt_title_left"-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/title_bar_title_left_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="LEFT"
            android:textColor="#333333"
            android:textSize="17dp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Right Content-->
    <!--android:id="@+id/right_content"-->
    <RelativeLayout
        android:id="@+id/title_bar_right_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <FrameLayout
            android:id="@+id/title_bar_title_right_FL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dimen_7_dp"
            android:paddingRight="@dimen/dimen_15_dp"
            android:visibility="gone" />

        <!-- 文字按钮-->
        <!--android:id="@+id/txt_title_right"-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/title_bar_title_right_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="15dp"
            android:text="RIGHT"
            android:textColor="#32CEB3"
            android:textSize="15dp"
            android:visibility="gone" />

        <!--android:id="@+id/iv_title_right"-->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/title_bar_title_right_IV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="7dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <!--android:id="@+id/iv_title_right2"-->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/title_bar_title_right2_IV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/title_bar_title_right_IV"
            android:clickable="true"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/title_bar_title_right3_IV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/title_bar_title_right2_IV"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="7dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/title_bar_title_right4_V"
            android:layout_width="88dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/title_bar_title_right3_IV"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="搜索"
                android:textColor="#999999"
                android:textSize="11sp" />

        </FrameLayout>

    </RelativeLayout>

    <View
        android:id="@+id/title_bar_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#E3E3E3"
        android:visibility="gone" />
</RelativeLayout>